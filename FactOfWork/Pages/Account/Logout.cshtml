@page
@model LogoutModel
<div class="bg-primary text-center text-white p-2"><h4>Выход</h4></div>
<div class="d-flex justify-content-center align-items-center text-center container">
<div class="m-2">
    <h6>Вы действительно хотите выйти?</h6>
    <div class="d-flex justify-content-center align-items-center text-center container">
        <form method="post">
            <button class="btn btn-primary" type="submit">Выйти</button>
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">На главную</a>
        </form>
    </div>
</div>
</div>
@functions
{
    public class LogoutModel : PageModel
    {
        private SignInManager<AppUser> signInMgr;
        public LogoutModel(SignInManager<AppUser> signmanager) => signInMgr = signmanager;

        public async Task<IActionResult> OnPostAsync()
        {
            await signInMgr.SignOutAsync();
            return RedirectToAction("Index", "Home");
        }
    }
}
